<div class="container my-3">
  <div class="d-none">{{user.isAdmin}}</div>

  <div class="row d-flex justify-content-ceneter">
    {{#each resp}}
    {{#if ../user.isAdmin}}
    <!-- Muestra todos los productos al administrador -->
    <div class="col-lg-4 col-md-6 col-sm-12 mb-4 mx-auto">
      <div class="card h-100">
        <img src="{{this.img}}" class="card-img-top" alt="{{this.title}}">
        <div class="card-body d-flex flex-column justify-content-between">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text overflow-auto">{{this.description}}</p>
          <p class="card-text">Precio: ${{this.price}}</p>
          <div class="d-flex justify-content-evenly">
            <a href="/edit-products/{{this._id}}" class="btn btn-secondary my-2">Editar</a>
            <a href="/delete-products/{{this._id}}" class="btn btn-danger my-2">Eliminar</a>
            <a href="/details-products/{{this._id}}" class="btn btn-primary my-2">Ver detalle</a>
          </div>
        </div>
      </div>
    </div>
    {{else}}
    {{#if this.inStock}}
    <!-- Muestra solo los productos en stock para los clientes -->
    <div class="col-lg-4 col-md-6 col-sm-12 mb-4 mx-auto pepe">
      <div class="card h-100 ">
        <img src="{{this.img}}" class="card-img-top" alt="{{this.title}}">
        <div class="card-body d-flex flex-column justify-content-between">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text overflow-auto">{{this.description}}</p>
          <p class="card-text">Precio: ${{this.price}}</p>
          <a href="/details-products/{{this._id}}" class="btn btn-primary my-2">Ver detalle</a>
        </div>
      </div>
    </div>
    {{/if}}
    {{/if}}
    {{/each}}
  </div>
</div>